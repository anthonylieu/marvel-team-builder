<body class="form_page">
    <img src="images/ui_assets/background-image.png" alt="heroes assembled" class="background-image">
  <section class="form_wrapper">
    <section class="form">
        <div class="form_block login_wrapper">
            <div class="tile">
                <h3 class="login">Login</h3>
            </div>

            <label class="tab login_tab" for="login">
                Login
            </label>

            <label class="tab signup_tab" for="signup">
                Signup
            </label>
            <span class="shape"></span>
            <div class="form_wrap">
                <div class="form_fild login_form">
                    <div class="input_group">
                        <input type="text" class="input" placeholder="Username" />
                    </div>
                    <div class="input_group">
                        <input type="password" class="input" placeholder="Password" />
                    </div>

                    <input type="submit" class="btn" value="Login" />
                </div>
            </div>
        </div>
    </section>
    <section class="form">
        <div class="form_block signup_wrapper">
            <div class="tile">
                <h3 class="signup">Signup</h3>
            </div>
            <label class="tab login_tab" for="login">
                Login
            </label>
            <div class="form_wrap">
                <div class="form_fild signup_form">
                    <div class="input_group">
                        <input type="text" class="input" placeholder="Username" />
                    </div>
                    <div class="input_group">
                        <input type="password" class="input" placeholder="Password" />
                    </div>
                    <div class="input_group">
                        <input type="password" class="input" placeholder="Confirm Password" />
                    </div>

                    <input type="submit" class="btn" value="SignUp" />
                </div>
            </div>
        </div>
    </section>
  </section>

  <script src="js/form.js"></script>
</body>