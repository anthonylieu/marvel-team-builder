<body>
    <main class="stat_wrapper align-baseline container">
        <div class="characters-container row">
            {{#each characters as |character|}}
            <div class="character card bg-secondary col-6 col-md-4 col-lg-2 mb-4" id="{{character.id}}">
                <div class="card-body row">
                    <h2 class="card-title">{{character.title}}</h2>
                    <input class="id" hidden value="{{character.id}}">

                    <img src="/images/{{character.image}}" alt="{{character.title}}" class="char-image text-center col-2 mb-2"/>
                <div class="chart col-6">
                    <table class="charts-css bar">

                            <caption> Character Evaluation </caption>

                            <td style="--size: calc( {{character.intelligence}} )"> INT </td>
                            </tr>
                            <tr>
                            <td style="--size: calc( {{character.strength}} )"> STR </td>
                            </tr>
                            <tr>
                            <td style="--size: calc( {{character.speed}} )"> SPD </td>
                            </tr>
                            <tr>
                            <td style="--size: calc( {{character.durability}} )"> DUR </td>
                            </tr>
                            <tr>
                            <td style="--size: calc( {{character.energy}} )"> ENG </td>
                            </tr>
                            <tr>
                            <td style="--size: calc( {{character.fighting_skills}} )"> SKL </td>
                            
                        </table>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </main>
    <script src="/js/logout.js"></script>
    <script src="/search.js"></script>
</body>