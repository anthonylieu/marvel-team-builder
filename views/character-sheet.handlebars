<body>
    <main class="stat_wrapper align-baseline container">
        <div class="characters-container row">
            {{#each characters as |character|}}
            <div class="character card bg-secondary col-6 col-md-4 col-lg-2 mb-4">
                <div class="card-body">
                    <h2 class="card-title">{{character.title}}</h2>
                    <input class="id" hidden value="{{character.id}}">
                    <img src="/images/{{character.image}}" alt="{{character.title}}"
                        class="char-image text-center col-3 mb-2" />
                    <div class="chart col-12">
                        <table class="charts-css bar">

                            <caption> Character Evaluation </caption>

                            <tbody>
                                <tr>

                                    <td style="--size: calc( {{character.intelligence}} )">| INT
                                        {{character.intelligence}} |</td>
                                </tr>
                                <tr>
                                    <td style="--size: calc( {{character.strength}} )">| STR {{character.strength}} |
                                    </td>
                                </tr>
                                <tr>
                                    <td style="--size: calc( {{character.speed}} )">| SPD {{character.speed}} |</td>
                                </tr>
                                <tr>
                                    <td style="--size: calc( {{character.durability}} )">| DUR {{character.durability}}
                                        |</td>
                                </tr>
                                <tr>
                                    <td style="--size: calc( {{character.energy}} )">| ENG {{character.energy}} |</td>
                                </tr>
                                <tr>
                                    <td style="--size: calc( {{character.fighting_skills}} )">| SKL
                                        {{character.fighting_skills}} |</td>

                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </main>
    <script src="/js/team.js"></script>
    <script src="/js/logout.js"></script>
    <script src="/js/search.js"></script>
</body>